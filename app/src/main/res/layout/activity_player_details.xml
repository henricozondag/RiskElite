<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mamahetogames.riskelite.PlayerDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Details"
        android:id="@+id/textViewPlayerDetails"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terug"
        android:id="@+id/buttonMovePhase2"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/checkBoxCard7" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard1"
        android:layout_below="@+id/textViewPlayerDetails"
        android:layout_alignParentStart="false"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="0dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard1"
        android:checked="false"
        android:layout_below="@+id/imageViewCard1"
        android:layout_alignEnd="@+id/imageViewCard1"
        android:visibility="invisible"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard2"
        android:layout_below="@+id/textViewPlayerDetails"
        android:layout_alignParentStart="false"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="70dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard2"
        android:checked="false"
        android:layout_below="@+id/imageViewCard2"
        android:layout_alignEnd="@+id/imageViewCard2"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard3"
        android:layout_below="@+id/textViewPlayerDetails"
        android:layout_alignParentStart="false"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="140dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard3"
        android:checked="false"
        android:layout_below="@+id/imageViewCard3"
        android:layout_alignEnd="@+id/imageViewCard3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard4"
        android:layout_below="@+id/textViewPlayerDetails"
        android:layout_alignParentStart="false"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="210dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard4"
        android:checked="false"
        android:layout_below="@+id/imageViewCard4"
        android:layout_alignEnd="@+id/imageViewCard4"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard5"
        android:layout_below="@+id/textViewPlayerDetails"
        android:layout_alignParentStart="false"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="280dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard5"
        android:checked="false"
        android:layout_below="@+id/imageViewCard5"
        android:layout_alignEnd="@+id/imageViewCard5"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard6"
        android:layout_below="@+id/imageViewCard1"
        android:layout_alignParentStart="false"
        android:layout_marginTop="80dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard6"
        android:checked="false"
        android:layout_below="@+id/imageViewCard6"
        android:layout_alignEnd="@+id/imageViewCard6"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard7"
        android:layout_below="@+id/imageViewCard1"
        android:layout_alignParentStart="false"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="70dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard7"
        android:checked="false"
        android:layout_alignTop="@+id/checkBoxCard6"
        android:layout_alignEnd="@+id/imageViewCard7"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard8"
        android:layout_below="@+id/imageViewCard1"
        android:layout_alignParentStart="false"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="140dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard8"
        android:checked="false"
        android:layout_alignTop="@+id/checkBoxCard7"
        android:layout_alignEnd="@+id/imageViewCard8"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard9"
        android:layout_below="@+id/imageViewCard1"
        android:layout_alignParentStart="false"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="210dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard9"
        android:checked="false"
        android:layout_alignTop="@+id/checkBoxCard8"
        android:layout_alignEnd="@+id/imageViewCard9"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewCard10"
        android:layout_below="@+id/imageViewCard1"
        android:layout_alignParentStart="false"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="280dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCard10"
        android:checked="false"
        android:layout_alignTop="@+id/checkBoxCard9"
        android:layout_alignEnd="@+id/imageViewCard10"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruil Kaarten"
        android:id="@+id/buttonRuilKaarten"
        android:layout_below="@+id/checkBoxCard8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Te plaatsen legers:"
        android:id="@+id/textViewPlaatsenLegers"
        android:layout_below="@+id/buttonRuilKaarten"
        android:layout_toStartOf="@+id/checkBoxCard8"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textViewAantalLegers"
        android:layout_alignTop="@+id/textViewPlaatsenLegers"
        android:layout_alignEnd="@+id/checkBoxCard9"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plaatsen"
        android:id="@+id/buttonPlaatsenLegers"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCardType1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewPlaatsenLegers"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCardType2"
        android:layout_alignBottom="@+id/buttonMovePhase2"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCardType3"
        android:layout_above="@+id/imageViewCardType2"
        android:layout_alignStart="@+id/imageViewCardType1"
        android:visibility="invisible" />

</RelativeLayout>
