<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mamahetogames.riskelite.GameResult">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terug naar menu"
        android:id="@+id/buttonMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Einde van het spel"
        android:id="@+id/textViewEndGame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="De winnaar is:"
        android:id="@+id/textViewWinner"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageViewArmy"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/textViewEndGame"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WinnerName"
        android:id="@+id/textViewWinnerName"
        android:layout_alignTop="@+id/imageViewArmy"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="WinnerCountriesText"
        android:id="@+id/textViewWinnerCountries"
        android:layout_alignTop="@+id/imageViewArmy"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="WinnerArmiesText"
        android:id="@+id/textViewWinnerArmies"
        android:layout_alignTop="@+id/imageViewArmy"
        android:layout_marginTop="115dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="LoserText"
        android:id="@+id/textViewLosers"
        android:layout_alignTop="@+id/imageViewArmy"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
